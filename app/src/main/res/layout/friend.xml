<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="381dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/friendPicImageView"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@+id/friendSpotTextView"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/friendNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Teszt BÃ©la"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/friendPicImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/friendShakeCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="-420"
            app:layout_constraintStart_toEndOf="@+id/friendPicImageView"
            app:layout_constraintTop_toBottomOf="@+id/friendNameTextView" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="shakes"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/friendShakeCountTextView"
            app:layout_constraintTop_toBottomOf="@+id/friendNameTextView" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Reg. date:"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/friendPicImageView"
            app:layout_constraintTop_toBottomOf="@+id/friendShakeCountTextView" />

        <TextView
            android:id="@+id/friendRegDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="a mai napon"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/friendSpotTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="0."
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/removeFriendImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_delete" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>